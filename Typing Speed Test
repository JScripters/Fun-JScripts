const text = "The quick brown fox jumps over the lazy dog.";
let userInput = '';
let startTime;
let endTime;

function startTest() {
    startTime = new Date();
    userInput = prompt("Type the following text:\n" + text);
    endTime = new Date();
    const timeDiff = (endTime - startTime) / 1000; // in seconds
    const words = userInput.split(' ').length;
    const wpm = Math.round(words / (timeDiff / 60));
    console.log(`Your typing speed: ${wpm} WPM`);
}

startTest();
